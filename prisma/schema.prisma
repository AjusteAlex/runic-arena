// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Card {
  id          Int            @id @default(autoincrement())
  name        String
  picture     String
  type        String
  class       String
  strenght    String
}

model Skill {
	id              Int             @id @default(autoincrement())
	attribute       String
	name            String
	description     String
}

model Ability {
	id              Int             @id @default(autoincrement())
	name            String
	description     String
	value           Int
	state           String
}